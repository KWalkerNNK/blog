<div class="container mt-4 mb-4">
    <div class="row">
        {{#each songs}}
        <div class="col-sm-6 col-lg-3">
            <div class="card sm mt-3">
                <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.author}}</p>
                    <a href="#" class="btn btn-outline-info">Sub</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>