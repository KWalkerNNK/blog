<div class="container mt-4 mb-4">
    <div class="row">
        {{#each songs}}
        <div class="col-sm-6 col-lg-3">
            <div class="card sm mt-3">
                <a href="./movies/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="./movies/{{this.slug}}" class="text-decoration-none">
                        <h5 class="card-title text-capitalize text-dark">{{this.name}}</h5>
                    </a>
                    <p class="card-text text-capitalize">{{this.author}}</p>
                    <a href="#" class="btn btn-outline-info">Nghe</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>